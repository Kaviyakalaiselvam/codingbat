// sleepIn:

public boolean sleepIn(boolean weekday, boolean vacation) {
  if (!weekday||vacation){
    return true;
  }
  else{
    return false;
  }
}

// monkeyTrouble:

public boolean monkeyTrouble(boolean aSmile, boolean bSmile) {
  if(aSmile&&bSmile){
    return true;
  }else if(!aSmile&&!bSmile){
    return true;
  }
  return false;
}

//sumDouble:

public int sumDouble(int a, int b) {
   if (a!=b){
     return a+b;
   }
   else if (a==b){
     return 2*(a+b);
   }
   return 0;
}
